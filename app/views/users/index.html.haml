- provide(:title, 'Users')
%h1 Users
%table{:class => "table table-striped"}
  %thead
    %tr
      %th Name
      %th Gender
      %th Last Updated
      %th Actions
  %tbody
    - @users.each do |user|
      %tr
        %td= link_to user.full_name, user_path(user)
        %td= user.gender.name
        %td= user.updated_at.strftime("%m/%d/%y")
        %td
          = link_to "Edit", edit_user_path(user), :class => 'btn btn-mini' if current_user == user
          = link_to "Destroy", user_path(user), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn btn-mini btn-danger' if current_user == user
          = link_to "Show", user_path(user), :class => 'btn btn-mini' unless current_user == user

= link_to "New", new_user_path, :class => 'btn btn-primary'
