    %tr
      %th Name 
      %th Work #
    - @work_phones.each do |phone|
      %tr{:class => cycle('rowA', 'rowB')}
        %td= link_to phone.user.full_name, phone.user
        %td= number_to_phone(phone.number,
                            area_code: true,
                            delimiter: '-')

