<!DOCTYPE html>
<html>
<head>
  <%= render 'layouts/header' %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
 <!--  <header class="controller.controller_name"> -->
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <% if current_user %>
            <%= link_to "Family Site", users_path, :class => "brand" %>
          <% else %>
            <%= link_to "Family Site", root_path, :class => "brand" %>
          <% end %>
          <div class="nav-collapse">
            <%= render 'layouts/navigation' %>
          </div>
          <div class="login">
            <%= render 'layouts/loginlinks' %>
          </div>
        </div>
      </div>
    </div>
 <!--  </header> -->
  <section>
    <div class="container">
      <div class="row">
        <div class="span8">
          <%= render :partial => "shared/flash_messages", :locals => {:flash => flash} %>
        </div>
      </div>
      <div class="row">
        <div class="span12">
          <%= yield %>
        </div>
      </div>
    </div>
  </section>
  <footer/>
</body>
</html>