!!!
%html
  %head
    %title 
      = "Family Site | " + @title
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %header
      - if current_user
        Logged in as #{current_user.username}
        = link_to "Log out", signout_path
      - else
        = link_to "Sign up", signup_path
        or
        = link_to "Log in", signin_path
    %p#notice= notice
    = yield